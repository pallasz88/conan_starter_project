{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Debug",
      "type": "shell",
      "command": "cmake",
      "args": ["--preset", "debug"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "--preset", "debug"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$gcc",
      "dependsOn": ["Configure Debug"]
    },
    {
      "label": "Configure Release",
      "type": "shell",
      "command": "cmake",
      "args": ["--preset", "release"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "--preset", "release"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$gcc",
      "dependsOn": ["Configure Release"]
    },
    {
      "label": "Run Executable",
      "type": "shell",
      "command": "./build/default/conan_starter_project",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": ["Build Debug"]
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "ctest",
      "args": ["--preset", "debug"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": ["Build Debug"]
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "build/default"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Conan Install",
      "type": "shell",
      "command": "conan",
      "args": ["install", ".", "--build", "missing", "-of", "build", "--profile", "debug", "--profile:build", "debug"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "find",
      "args": ["src", "include", "tests", "-name", "*.cpp", "-o", "-name", "*.hpp", "-o", "-name", "*.h", "|", "xargs", "clang-format", "-i"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}